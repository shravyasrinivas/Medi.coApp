<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:background="@color/home_background">
    <LinearLayout
        android:id="@+id/menu_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_198sdp"
        android:paddingTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:background="@color/colorTextIcons">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/card_1"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/doc"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/menu_usericon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_9sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="XYZ"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vieweditprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="View and edit profile"
                        android:textStyle="bold"
                        android:textColor="@color/card11"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8ssp"
                android:layout_height="2dp"
                android:background="@color/answer">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTextIcons">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_100sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/menu_logo"
                        android:layout_gravity="right">
                        <TextView
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:text="MEDI.CO"
                            android:textColor="@color/colorTextIcons"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="right"
                        android:padding="@dimen/_3sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="At your quick service  "
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/menu_user"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/answer">
    </LinearLayout>
</RelativeLayout>